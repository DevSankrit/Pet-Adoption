<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Adoption</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="../adoptpet.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- PayPal SDK Script -->
    <script src="https://www.paypal.com/sdk/js?client-id=AQV3jpbKQpeNicX0ZIolaUi7WO8zK0LuR9TSFBxbQ_CelIjeEl2UJfVNQfVzIHt29F6-Y8Qdg9KZGy5B&components=buttons"></script> <!-- Replace YOUR_CLIENT_ID -->
</head>

<body>
    <section id="contactus-heading">
        <h1 style="font-size: 5rem;">Adopt <%= pet.name %>!</h1>
        <div class="row">
            <div class="col-lg-8 left-div">
                <form id="adoptForm">
                    <div style="padding-bottom: 2%;" class="row">
                        <div class="form-group col-lg-6">
                            <input name="FirstName" type="text" id="first-name" required autocomplete="off">
                            <label for="first-name">Full Name</label>
                        </div>
                    </div>
                    <div style="padding-bottom: 2%;" class="row">
                        <div style="padding-bottom: 2%;" class="form-group col-lg-6">
                            <input name="EmailAdd" type="email" id="email" required autocomplete="off">
                            <label for="Email">Email</label>
                        </div>
                        <div style="padding-bottom: 2%;" class="form-group col-lg-6">
                            <input name="PhoneNum" type="number" id="phone-no" required autocomplete="off">
                            <label for="phone-no">Phone no.</label>
                        </div>
                    </div>
                    <div style="padding-bottom: 5%;" class="row"></div>

                    <!-- PayPal button will be rendered here -->
                    <div id="paypal-button-container"></div>
                </form>
            </div>
            <div class="col-lg-4 right-div">
                <p style="font-size: 1.5rem;"><strong>Steps to adopt a pet:</strong></p>
                <p>1. Browse through our available pets</p>
                <p>2. Select the one you'd love to adopt.</p>
                <p>3. Fill out the adoption form with your details.</p>
                <p>4. Complete the payment and submit.</p>
                Once verified, the adoption process will be completed and you'll be contacted by our team. Thank you for choosing to adopt!
            </div>
        </div>
    </section>

    <script>
        // JavaScript to handle the PayPal payment
        paypal.Buttons({
            createOrder: function(data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        reference_id: '<%= pet._id %>',  // Pass adoption ID here
                        amount: {
                            currency_code: 'USD',
                            value: '10.00'  // Change this amount according to your adoption fee
                        }
                    }],
                    application_context: {
                        return_url: `http://localhost:5000/payment/success/<%= pet._id %>`,  // After successful payment
                        cancel_url: `http://localhost:5000/payment/cancel/<%= pet._id %>`  // In case of payment cancellation
                    }
                });
            },
            onApprove: function(data, actions) {
                return actions.order.capture().then(function(details) {
                    // Send successful payment details to the server
                    fetch(`/payment/success/<%= pet._id %>?token=${data.orderID}`, {
                        method: 'GET',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    }).then(response => response.text())
                    .then(responseText => {
                        console.log(responseText);  // Handle response from backend
                        alert('Payment Successful! Thank you for adopting.');
                    }).catch(error => {
                        console.error('Error:', error);
                        alert('Something went wrong with the payment.');
                    });
                });
            },
            onError: function(err) {
                console.error('Error during PayPal payment:', err);
                alert('Error occurred during payment. Please try again.');
            }
        }).render('#paypal-button-container');  // Render PayPal button in the specified div
    </script>
</body>

</html>
