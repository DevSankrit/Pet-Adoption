<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Webpage</title>
    <link rel="stylesheet" href="dashboardcss.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <h2>RESCUE <span class="primary">HEARTS</span>‚ù§</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined"> close </span>
                </div>
            </div>

            <div class="sidebar">
                <a href="" class="active">
                    <span class="material-symbols-outlined"> grid_view </span>
                    <h3>Dashboard</h3>
                </a>

                <a href="/addpet">
                    <span class="material-symbols-outlined"> person_outline </span>
                    <h3>Add Pet</h3>
                </a>

                <a href="/managepets">
                    <span class="material-symbols-outlined"> insights </span>
                    <h3>Manage Pets</h3>
                </a>

                <a href="/report">
                    <span class="material-symbols-outlined"> report_gmailerrorred </span>
                    <h3>Reports</h3>
                </a>
                <a href="" id="logout-link">
                    <span class="material-symbols-outlined"> logout </span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>

        <main>
            <h1 class="main-title">Dashboard</h1>
            <!-- <div class="insights">
                <div class="sales">
                    <div class="middle">
                        <div class="left">
                            <h3 class="detail-card">Total Available Space</h3>
                            <h1 class="detail-card-number">15</h1>
                        </div>
                    </div>
                </div>
            
                <div class="expenses">
                    <div class="middle">
                        <div class="left">
                            <h3 class="detail-card">Pets Available for Adoption</h3>
                            <h1 class="detail-card-number">92</h1>
                        </div>
                    </div>
                </div>

                <div class="income">
                    <div class="middle">
                        <div class="left">
                            <h3 class="detail-card">Adoption History</h3>
                            <h1 class="detail-card-number">410</h1>
                        </div>
                    </div>
                </div>
            </div> -->

            <!-- Adoption Requests Table -->
            <div class="recent-order">
                <h1>Adoption Requests</h1>
                <table>
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Customer Number</th>
                            <th>Pet Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% adoptions.forEach(function(adoption) { %>
                            <tr>
                                <td><%= adoption.customerName %></td>
                                <td><%= adoption.phone %></td>
                                <td>
                                    <%= adoption.petId ? adoption.petId.name : 'Pet Not Found' %> <!-- Access pet details directly -->
                                </td>
                                <td class="<%= adoption.paymentStatus === 'Pending' ? 'warning' : 'success' %>">
                                    <%= adoption.paymentStatus %>
                                </td>
                                <td class="primary">Details</td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        </main>
    </div>

    <script>
        document.getElementById("logout-link").addEventListener("click", function(event) {
            event.preventDefault(); // Prevent the default anchor click behavior
            
            // Create a form element to send a POST request
            var form = document.createElement("form");
            form.method = "POST";
            form.action = "/logout";
    
            // Append the form to the body and submit it
            document.body.appendChild(form);
            form.submit();
        });
    </script>
</body>
</html>
